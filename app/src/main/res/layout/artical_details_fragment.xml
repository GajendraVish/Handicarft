<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:padding="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_artical"
                android:layout_width="match_parent"
                android:layout_height="240dp" />


            <ImageView
                android:src="@drawable/play_btn_thumbnail"
                android:layout_centerVertical="true"
                android:id="@+id/play"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="82dp" />

        </RelativeLayout>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="1dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp"
               >


                <com.magnum.handloom.widget.RobotoBoldTextView
                    android:id="@+id/artical_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableTint="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:minLines="1"
                    android:text=""
                    android:textColor="@color/primary_text"
                    android:textSize="15sp"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="1dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                >

                <com.magnum.handloom.widget.RobotoBoldTextView
                    android:id="@+id/artical_created_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableTint="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:minLines="1"
                    android:text=""
                    android:textColor="@color/primary_text"
                    android:textSize="15sp"
                    />
                <com.magnum.handloom.widget.RobotoBoldTextView
                    android:id="@+id/artical_created_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableTint="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:minLines="1"
                    android:text=""
                    android:textColor="@color/primary_text"
                    android:textSize="15sp"
                    />


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</ScrollView>